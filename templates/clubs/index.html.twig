{% extends 'base.html.twig' %}

{% block title %}Clubs index{% endblock %}

{% block body %}
    <h1>Clubs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.id }}</td>
                <td>{{ club.name }}</td>
                <td>
                    <a href="{{ path('app_clubs_show', {'id': club.id}) }}">show</a>
                    <a href="{{ path('app_clubs_edit', {'id': club.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clubs_new') }}">Create new</a>
{% endblock %}
