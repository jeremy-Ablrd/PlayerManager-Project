{% extends 'base.html.twig' %}

{% block title %}Clubs{% endblock %}

{% block body %}
    <h1>Clubs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ club.name }}</td>
            </tr>
            <tr>                
                <th>Players</th>
                <td>
                {% for name in club.players %}
                {{ name }}<br>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clubs_index') }}">back to list</a>

    <a href="{{ path('app_clubs_edit', {'id': club.id}) }}">edit</a>

    {{ include('clubs/_delete_form.html.twig') }}
{% endblock %}
